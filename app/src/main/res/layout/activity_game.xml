<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eti.vocabextender.GameActivity">

    <Button
        android:text="Answer placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question"
        style="@android:style/Widget.Material.Button.Colored"
        android:textSize="12sp" />

    <Button
        android:text="Answer placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer2"
        android:textSize="12sp"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_below="@+id/answer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Answer placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer3"
        style="@android:style/Widget.Material.Button.Colored"
        android:textSize="12sp"
        android:layout_below="@+id/answer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Answer placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer4"
        style="@android:style/Widget.Material.Button.Colored"
        android:textSize="12sp"
        android:layout_below="@+id/answer3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Question placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timeDescText"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <ImageView
        app:srcCompat="@drawable/heart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/heart3"
        android:layout_height="51dp"
        android:adjustViewBounds="false"
        android:layout_width="45dp" />

    <ImageView
        app:srcCompat="@drawable/heart"
        android:id="@+id/heart2"
        android:layout_height="51dp"
        android:adjustViewBounds="false"
        android:layout_width="45dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/heart3"
        android:layout_toStartOf="@+id/heart3"
        android:layout_marginRight="5dp" />

    <ImageView
        app:srcCompat="@drawable/heart"
        android:id="@+id/heart1"
        android:layout_height="51dp"
        android:adjustViewBounds="false"
        android:layout_width="45dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/heart2"
        android:layout_toStartOf="@+id/heart2"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="0:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeValText"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/timeDescText"
        android:layout_toEndOf="@+id/timeDescText"
        android:layout_marginLeft="5dp" />

</RelativeLayout>
