<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eti.vocabextender.MainMenuActivity">

    <Button
        android:text="TEST MODE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testMode"
        style="@android:style/Widget.Material.Button.Colored"
        android:elevation="22dp"
        android:visibility="visible"
        android:width="200dp"
        android:layout_below="@+id/learnMode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="LEARN MODE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/learnMode"
        style="@android:style/Widget.Material.Button.Colored"
        android:elevation="22dp"
        android:visibility="visible"
        android:width="200dp"
        android:layout_below="@+id/mainMenuText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select game mode"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textAlignment="center"
        android:id="@+id/mainMenuText"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
